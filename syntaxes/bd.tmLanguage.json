{
    "scopeName": "source.bd",
    "patterns": [

        {
            "name": "comment.block.bd",
            "begin": "<<<",
            "end": ">>>"
        },

        {
            "name": "comment.line.bd",
            "match": "#.*"
        },

        {
            "name": "keyword.control.bd",
            "match": "\\b(if|else|end|while|def|call|return)\\b"
        },

        {
            "name": "keyword.other.bd",
            "match": "\\b(show|write|ask|let|num|dec)\\b"
        },

        {
            "name": "variable.parameter.bd",
            "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
        },

        {
            "name": "string.quoted.double.bd",
            "begin": "\"",
            "end": "\""
        },

        {
            "name": "constant.numeric.bd",
            "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        },

        {
            "name": "keyword.operator.bd",
            "match": "\\+|\\-|\\*|\\/|\\*\\*|%|==|>|<|="
        }
    ]
}
